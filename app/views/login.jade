extends layouts/bootstrap
block content
    style
        body {
            background-color: #f5f5f5;
        }
        .form-signin {
            max-width: 300px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, .05);
            -moz-box-shadow: 0 1px 2px rgba(0, 0, 0, .05);
            box-shadow: 0 1px 2px rgba(0, 0, 0, .05);
        }

        .form-signin .form-signin-heading,
        .form-signin .checkbox {
            margin-bottom: 10px;
        }

        .form-signin input[type="text"],
        .form-signin input[type="password"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
        }
    div.container
        form.form-signin(method="post", action="/do-login",id="loginForm")
            h2.form-signin-heading Genius Bar
            if locals.errors.length > 0
                for error in errors
                    div.alert.alert-error=error
            input.input-block-level(type="text",placeholder="ERP账号",name="userName",required)
            input.input-block-level(type="password",placeholder="密码",name="password",required)
            input(type="hidden", name="target", value=target)
            button.btn.btn-large.btn-primary(type="submit") 登录

